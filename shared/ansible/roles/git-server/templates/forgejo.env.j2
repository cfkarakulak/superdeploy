# Forgejo Environment Variables
# Generated by Ansible

# Database
FORGEJO_DB_NAME={{ forgejo_db_name }}
FORGEJO_DB_USER={{ forgejo_db_user }}
FORGEJO_DB_PASSWORD={{ forgejo_db_password }}
POSTGRES_PASSWORD={{ forgejo_db_password }}

# Security (auto-generated random keys)
FORGEJO_SECRET_KEY={{ lookup('password', '/dev/null length=64 chars=ascii_letters,digits') }}
FORGEJO_INTERNAL_TOKEN={{ lookup('password', '/dev/null length=105 chars=ascii_letters,digits') }}

# Admin User (will be created automatically)
FORGEJO_ADMIN_USER={{ forgejo_admin_user }}
FORGEJO_ADMIN_PASSWORD={{ forgejo_admin_password }}
FORGEJO_ADMIN_EMAIL={{ forgejo_admin_email }}

# Server (external IPs)
FORGEJO_EXTERNAL_IP={{ core_external_ip }}
FORGEJO_ORG={{ forgejo_org }}

