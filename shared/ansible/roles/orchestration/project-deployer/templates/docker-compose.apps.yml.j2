# Docker Compose file for {{ project_name }} applications
# Generated by project-deployer role
# PROCESS-BASED ARCHITECTURE: Each process type runs as a separate service
# Example: api-web, api-worker, api-release (all from same image, different commands)

services:
{% for app_name, app_config in apps.items() %}
{% if app_config.processes is defined %}
{% for process_name, process_config in app_config.processes.items() %}
  {{ app_name }}-{{ process_name }}:
    image: {{ docker.registry | default('docker.io') }}/{{ docker.organization }}/{{ app_name }}:latest
    command: {{ process_config.command }}
{% if process_config.port is defined %}
    # Expose port for external access (required for multi-VM setup)
    ports:
      - "{{ process_config.port }}:{{ process_config.port }}"
{% endif %}
    environment:
      - PROJECT_NAME={{ project_name }}
      - APP_NAME={{ app_name }}
      - PROCESS_TYPE={{ process_name }}
{% if process_config.port is defined %}
      - PORT={{ process_config.port }}
{% endif %}
{% if process_config.env is defined %}
{% for env_key, env_value in process_config.env.items() %}
      - {{ env_key }}={{ env_value }}
{% endfor %}
{% endif %}
    env_file:
      - {{ project_base_path }}/data/{{ app_name }}/.env
    volumes:
      - {{ project_base_path }}/data/{{ app_name }}:/app/data
      - {{ project_base_path }}/logs/{{ app_name }}:/app/logs
    networks:
      {{ project_name }}-network:
        aliases:
          - {{ app_name }}-{{ process_name }}
    labels:
      - "com.superdeploy.project={{ project_name }}"
      - "com.superdeploy.app={{ app_name }}"
      - "com.superdeploy.process={{ process_name }}"
{% if process_config.port is defined %}
      - "com.superdeploy.port={{ process_config.port }}"
{% endif %}
      - "com.superdeploy.replicas={{ process_config.replicas | default(1) }}"
{% if monitoring_enabled and process_config.port is defined %}
      - "prometheus.scrape=true"
      - "prometheus.port={{ process_config.port }}"
      - "prometheus.path=/metrics"
{% endif %}
    # Healthcheck: Inherited from Dockerfile (no override)
    # DEPLOYMENT STRATEGY: Replicas with zero-downtime rolling updates
{% if process_config.run_on is not defined or process_config.run_on != 'deploy' %}
    deploy:
      mode: replicated
      replicas: {{ process_config.replicas | default(1) }}
      update_config:
        parallelism: 1
        delay: 10s
        order: start-first  # Zero-downtime: new container starts before old stops
        failure_action: rollback
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
      # RESOURCE LIMITS: Prevent OOM and ensure fair resource sharing (per replica)
      resources:
        limits:
          memory: {{ app_config.resources.memory | default('512M') if app_config.resources is defined else '512M' }}
          cpus: '{{ app_config.resources.cpu | default('1.0') if app_config.resources is defined else '1.0' }}'
        reservations:
          memory: {{ app_config.resources.memory_reservation | default('256M') if app_config.resources is defined else '256M' }}
          cpus: '{{ app_config.resources.cpu_reservation | default('0.5') if app_config.resources is defined else '0.5' }}'
{% else %}
    # Release process: runs once on deploy, not as a long-running service
    restart: "no"
    deploy:
      mode: replicated
      replicas: 0  # Managed by deployment hooks, not running continuously
{% endif %}

{% endfor %}
{% endif %}
{% endfor %}

networks:
  {{ project_name }}-network:
    external: true
