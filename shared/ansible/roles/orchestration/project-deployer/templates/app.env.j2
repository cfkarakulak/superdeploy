# Environment file for {{ item.key }} application
# Generated by project-deployer role

# Project configuration
PROJECT_NAME={{ project_name }}
APP_NAME={{ item.key }}
PORT={{ item.value.port }}

# Network configuration
NETWORK_NAME={{ network_name }}
NETWORK_SUBNET={{ network_subnet }}

# Paths
DATA_PATH={{ project_base_path }}/data/{{ item.key }}
LOGS_PATH={{ project_base_path }}/logs/{{ item.key }}

{% if monitoring_enabled %}
# Monitoring configuration
MONITORING_ENABLED=true
PROMETHEUS_ENDPOINT={{ prometheus_endpoint }}
{% endif %}

# Application-specific configuration
{% if item.value.env is defined %}
{% for key, value in item.value.env.items() %}
{{ key }}={{ value }}
{% endfor %}
{% endif %}
