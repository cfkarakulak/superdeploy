version: '3.8'

services:
  {{ service_name }}:
    image: rabbitmq:{{ version }}
    container_name: {{ container_name }}
    restart: always
    hostname: {{ container_name }}
    env_file:
      - .env
    environment:
      RABBITMQ_DEFAULT_USER: ${USER}
      RABBITMQ_DEFAULT_PASS: ${PASSWORD}
      RABBITMQ_DEFAULT_VHOST: ${VHOST}
    volumes:
      - {{ volume_name }}:/var/lib/rabbitmq
    networks:
      - {{ project_name }}-network
    ports:
      - "0.0.0.0:{{ PORT }}:5672"   # AMQP (instance-specific port)
      - "0.0.0.0:{{ PORT | int + 10000 }}:15672" # Management UI (port + 10000)
{% if healthcheck and healthcheck.command is defined %}
    healthcheck:
      test: ["CMD-SHELL", "{{ healthcheck.command }}"]
      interval: {{ healthcheck.interval }}
      timeout: {{ healthcheck.timeout }}
      retries: {{ healthcheck.retries }}
      start_period: {{ healthcheck.start_period }}
{% endif %}
    # RESOURCE LIMITS: RabbitMQ + Management UI
    deploy:
      resources:
        limits:
          memory: {{ resources.memory | default('512M') }}
          cpus: '{{ resources.cpu | default('1.0') }}'
        reservations:
          memory: {{ (resources.memory | default('512M') | regex_replace('([0-9]+)([MG])', '\\1') | int / 2) | int }}{{ resources.memory | default('512M') | regex_replace('[0-9]+', '') }}
          cpus: '{{ (resources.cpu | default('1.0') | float / 2) | round(2) }}'
    labels:
      - "prometheus.scrape=true"
      - "prometheus.port={{ monitoring.metrics_port | default(9090) }}"
      - "prometheus.path=/metrics"
      - "project={{ project_name }}"
      - "addon.type=rabbitmq"
      - "addon.instance={{ instance_name }}"
      - "addon.full_name={{ instance_full_name }}"
      - "service={{ service_name }}"

volumes:
  {{ volume_name }}:
    name: {{ volume_name }}

networks:
  {{ project_name }}-network:
    name: {{ project_name }}-network
    external: true
