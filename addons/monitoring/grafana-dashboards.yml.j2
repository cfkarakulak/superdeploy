# Grafana Dashboard Provisioning
# Auto-generated by SuperDeploy

apiVersion: 1

providers:
  # Default dashboards directory
  - name: 'SuperDeploy Dashboards'
    orgId: 1
    folder: 'SuperDeploy'
    type: file
    disableDeletion: false
    updateIntervalSeconds: 30
    allowUiUpdates: true
    options:
      path: /etc/grafana/provisioning/dashboards/json
      foldersFromFilesStructure: true

  # Project-specific dashboards
{% for project in projects %}
  - name: '{{ project.name | title }} Dashboards'
    orgId: 1
    folder: '{{ project.name | title }}'
    type: file
    disableDeletion: false
    updateIntervalSeconds: 30
    allowUiUpdates: true
    options:
      path: /etc/grafana/provisioning/dashboards/projects/{{ project.name }}
      foldersFromFilesStructure: false
{% endfor %}
