{
  "title": "Infrastructure - System Metrics",
  "tags": [
    "superdeploy",
    "infrastructure",
    "system"
  ],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "name": "project",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(up, project)",
        "refresh": 1,
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage by Project",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum by (project) (rate(process_cpu_seconds_total{project=~\"$project\"}[5m])) * 100",
          "refId": "A",
          "legendFormat": "{{project}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": [
            "mean",
            "lastNotNull",
            "max"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "unit": "percent",
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 70,
                "color": "yellow"
              },
              {
                "value": 90,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Memory Usage by Project",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum by (project) (process_resident_memory_bytes{project=~\"$project\"}) / 1024 / 1024",
          "refId": "A",
          "legendFormat": "{{project}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": [
            "mean",
            "lastNotNull",
            "max"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "unit": "decmbytes"
        }
      }
    },
    {
      "id": 3,
      "title": "Network I/O by Project",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "sum by (project) (rate(caddy_http_request_size_bytes_sum{project=~\"$project\"}[5m]))",
          "refId": "A",
          "legendFormat": "{{project}} - In"
        },
        {
          "expr": "sum by (project) (rate(caddy_http_response_size_bytes_sum{project=~\"$project\"}[5m]))",
          "refId": "B",
          "legendFormat": "{{project}} - Out"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": [
            "mean",
            "lastNotNull",
            "max"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "unit": "Bps"
        }
      }
    },
    {
      "id": 4,
      "title": "Active Connections",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "sum by (project) (caddy_http_requests_in_flight{project=~\"$project\"})",
          "refId": "A",
          "legendFormat": "{{project}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": [
            "mean",
            "lastNotNull",
            "max"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Goroutines (Go Services)",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum by (project) (go_goroutines{project=~\"$project\"})",
          "refId": "A",
          "legendFormat": "{{project}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": [
            "mean",
            "lastNotNull",
            "max"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 6,
      "title": "GC Pause Time (Go Services)",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum by (project) (rate(go_gc_duration_seconds_sum{project=~\"$project\"}[5m])) / sum by (project) (rate(go_gc_duration_seconds_count{project=~\"$project\"}[5m]))",
          "refId": "A",
          "legendFormat": "{{project}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": [
            "mean",
            "lastNotNull",
            "max"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "unit": "s"
        }
      }
    },
    {
      "id": 7,
      "title": "Process Uptime",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 24
      },
      "targets": [
        {
          "expr": "time() - process_start_time_seconds{project=~\"$project\"}",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "Uptime (seconds)",
            "desc": true
          }
        ]
      },
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Uptime (seconds)"
            },
            "properties": [
              {
                "id": "unit",
                "value": "s"
              }
            ]
          }
        ]
      }
    }
  ]
}