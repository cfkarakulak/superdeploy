version: '3.8'

services:
  {{ service_name }}:
    image: mongo:{{ version }}
    container_name: {{ container_name }}
    restart: always
    env_file:
      - .env
    environment:
      MONGO_INITDB_ROOT_USERNAME: ${USER}
      MONGO_INITDB_ROOT_PASSWORD: ${PASSWORD}
      MONGO_INITDB_DATABASE: ${DATABASE}
    volumes:
      - mongodb-data:/data/db
      - mongodb-config:/data/configdb
    networks:
      - {{ project_name }}-network
    ports:
      - "0.0.0.0:${PORT}:27017"   # MongoDB (instance-specific port)
{% if healthcheck and healthcheck.command is defined %}
    healthcheck:
      test: ["CMD-SHELL", "{{ healthcheck.command }}"]
      interval: {{ healthcheck.interval }}
      timeout: {{ healthcheck.timeout }}
      retries: {{ healthcheck.retries }}
      start_period: {{ healthcheck.start_period }}
{% endif %}
    # RESOURCE LIMITS (Plan: {{ resources.plan | default('standard') }})
    deploy:
      resources:
        limits:
          memory: {{ resources.memory | default('1G') }}
          cpus: '{{ resources.cpu | default('1.0') }}'
        reservations:
          memory: {{ resources.memory_reservation | default('512M') }}
          cpus: '{{ resources.cpu_reservation | default('0.5') }}'
    labels:
      # Monitoring
      - "prometheus.scrape=true"
      - "prometheus.port={{ monitoring.metrics_port | default(9090) }}"
      - "prometheus.path=/metrics"
      # Project & service info
      - "project={{ project_name }}"
      - "service={{ service_name }}"
      # Addon instance metadata
      - "addon.type=mongodb"
      - "addon.instance={{ instance_name }}"
      - "addon.full_name={{ instance_full_name }}"
      - "addon.category={{ instance_category }}"
      - "addon.plan={{ resources.plan | default('standard') }}"

volumes:
  mongodb-data:
    name: {{ volume_name }}
  mongodb-config:
    name: {{ project_name }}-mongodb-{{ instance_name }}-config

networks:
  {{ project_name }}-network:
    name: {{ project_name }}-network
    external: true
