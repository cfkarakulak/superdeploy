version: '3.8'

services:
  {{ addon_name }}:
    image: mongo:{{ version }}
    container_name: {{ project_name }}-{{ addon_name }}
    restart: always
    environment:
      MONGO_INITDB_ROOT_USERNAME: admin
      MONGO_INITDB_ROOT_PASSWORD: ${MONGODB_ROOT_PASSWORD}
      MONGO_INITDB_DATABASE: ${MONGODB_DATABASE}
    volumes:
      - {{ addon_name }}-data:/data/db
      - {{ addon_name }}-config:/data/configdb
    networks:
      - {{ project_name }}-network
    ports:
      - "0.0.0.0:27017:27017"   # MongoDB (internal network + SSH tunnel)
{% if healthcheck and healthcheck.command is defined %}
    healthcheck:
      test: ["CMD-SHELL", "{{ healthcheck.command }}"]
      interval: {{ healthcheck.interval }}
      timeout: {{ healthcheck.timeout }}
      retries: {{ healthcheck.retries }}
      start_period: {{ healthcheck.start_period }}
{% endif %}
    # RESOURCE LIMITS: MongoDB can be memory-intensive
    deploy:
      resources:
        limits:
          memory: {{ resources.memory | default('1G') }}
          cpus: '{{ resources.cpu | default('1.0') }}'
        reservations:
          memory: {{ resources.memory_reservation | default('512M') }}
          cpus: '{{ resources.cpu_reservation | default('0.5') }}'
    labels:
      - "prometheus.scrape=true"
      - "prometheus.port={{ monitoring.metrics_port | default(9090) }}"
      - "prometheus.path=/metrics"
      - "project={{ project_name }}"
      - "service={{ addon_name }}"

volumes:
  {{ addon_name }}-data:
    name: {{ project_name }}-{{ addon_name }}-data
  {{ addon_name }}-config:
    name: {{ project_name }}-{{ addon_name }}-config

networks:
  {{ project_name }}-network:
    name: {{ project_name }}-network
    external: true
