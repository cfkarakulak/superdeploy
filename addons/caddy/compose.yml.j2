version: '3.8'

services:
  {{ service_name }}:
    image: caddy:{{ version }}
    container_name: {{ container_name }}
    restart: always
    env_file:
      - .env
    environment:
      CADDY_EMAIL: ${EMAIL}
    volumes:
      - {{ volume_name }}:/data
      - {{ volume_name }}-config:/config
      - ./Caddyfile:/etc/caddy/Caddyfile:ro
    ports:
      - "${HTTP_PORT}:80"
      - "${HTTPS_PORT}:443"
      - "${ADMIN_PORT}:2019"
    networks:
      - {{ project_name }}-network
{% if healthcheck and healthcheck.interval is defined %}
    healthcheck:
      test: ["CMD-SHELL", "{{ healthcheck.command }}"]
      interval: {{ healthcheck.interval }}
      timeout: {{ healthcheck.timeout }}
      retries: {{ healthcheck.retries }}
      start_period: {{ healthcheck.start_period }}
{% endif %}
    # RESOURCE LIMITS: Caddy is lightweight
    deploy:
      resources:
        limits:
          memory: {{ resources.memory | default('256M') }}
          cpus: '{{ resources.cpu | default('0.5') }}'
        reservations:
          memory: {{ (resources.memory | default('256M') | regex_replace('([0-9]+)([MG])', '\\1') | int / 2) | int }}{{ resources.memory | default('256M') | regex_replace('[0-9]+', '') }}
          cpus: '{{ (resources.cpu | default('0.5') | float / 2) | round(2) }}'
    labels:
      - "prometheus.scrape=true"
      - "prometheus.port={{ monitoring.metrics_port | default(9090) }}"
      - "prometheus.path=/metrics"
      - "project={{ project_name }}"
      - "addon.type=caddy"
      - "addon.instance={{ instance_name }}"
      - "addon.full_name={{ instance_full_name }}"
      - "service={{ service_name }}"

volumes:
  {{ volume_name }}:
    name: {{ volume_name }}
  {{ volume_name }}-config:
    name: {{ volume_name }}-config

networks:
  {{ project_name }}-network:
    name: {{ project_name }}-network
    external: true
