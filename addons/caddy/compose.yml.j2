version: '3.8'

services:
  {{ addon_name }}:
    image: caddy:{{ version }}
    container_name: {{ project_name }}-{{ addon_name }}
    restart: unless-stopped
    environment:
      CADDY_EMAIL: ${CADDY_EMAIL}
    volumes:
      - {{ addon_name }}-data:/data
      - {{ addon_name }}-config:/config
      - ./Caddyfile:/etc/caddy/Caddyfile:ro
    ports:
      - "${CADDY_HTTP_PORT}:80"
      - "${CADDY_HTTPS_PORT}:443"
      - "${CADDY_ADMIN_PORT}:2019"
    networks:
      - {{ project_name }}-network
{% if healthcheck and healthcheck.interval is defined %}
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:2019/config/ || exit 1"]
      interval: {{ healthcheck.interval }}
      timeout: {{ healthcheck.timeout }}
      retries: {{ healthcheck.retries }}
      start_period: {{ healthcheck.start_period }}
{% endif %}
    # RESOURCE LIMITS: Caddy is lightweight
    deploy:
      resources:
        limits:
          memory: {{ resources.memory | default('256M') }}
          cpus: '{{ resources.cpu | default('0.5') }}'
        reservations:
          memory: {{ resources.memory_reservation | default('128M') }}
          cpus: '{{ resources.cpu_reservation | default('0.25') }}'
    labels:
      - "prometheus.scrape=true"
      - "prometheus.port={{ monitoring.metrics_port | default(9090) }}"
      - "prometheus.path=/metrics"
      - "project={{ project_name }}"
      - "service={{ addon_name }}"

volumes:
  {{ addon_name }}-data:
    name: {{ project_name }}-{{ addon_name }}-data
  {{ addon_name }}-config:
    name: {{ project_name }}-{{ addon_name }}-config

networks:
  {{ project_name }}-network:
    name: {{ project_name }}-network
    external: true
