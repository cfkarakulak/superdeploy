# =============================================================================
# Caddy Configuration for Orchestrator
# =============================================================================
# This Caddyfile provides reverse proxy for monitoring services
# Auto-generated by SuperDeploy

{
    # Global options
    admin 0.0.0.0:2019
    
    # Email for Let's Encrypt
    email {{ CADDY_EMAIL }}
    
    # Enable metrics for Prometheus scraping
    servers {
        metrics
    }
}

# =============================================================================
# Grafana - Monitoring Dashboard
# =============================================================================
{% if GRAFANA_DOMAIN %}
{{ GRAFANA_DOMAIN }} {
    # Reverse proxy to Grafana container
    reverse_proxy superdeploy-grafana:3000 {
        # Health check
        health_uri /api/health
        health_interval 30s
        health_timeout 10s
        
        # Headers
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Logging
    log {
        output file /var/log/caddy/grafana-access.log
        format json
    }
    
    # Security headers
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Prevent MIME sniffing
        X-Content-Type-Options "nosniff"
        # XSS Protection
        X-XSS-Protection "1; mode=block"
        # Referrer Policy
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}
{% endif %}

# =============================================================================
# Prometheus - Metrics Collection
# =============================================================================
{% if PROMETHEUS_DOMAIN %}
{{ PROMETHEUS_DOMAIN }} {
    # Reverse proxy to Prometheus container
    reverse_proxy superdeploy-prometheus:9090 {
        # Health check
        health_uri /-/healthy
        health_interval 30s
        health_timeout 10s
        
