version: '3.8'

services:
  {{ addon_name }}:
    image: redis:{{ version }}
    container_name: {{ project_name }}-{{ addon_name }}
    restart: unless-stopped
    command: redis-server --requirepass ${REDIS_PASSWORD} --appendonly yes
    environment:
      REDIS_PASSWORD: ${REDIS_PASSWORD}
    volumes:
      - {{ addon_name }}-data:/data
    networks:
      - {{ project_name }}-network
    ports:
      - "127.0.0.1:6379:6379"   # Redis (SSH tunnel only)
{% if healthcheck and healthcheck.command is defined %}
    healthcheck:
      test: ["CMD-SHELL", "{{ healthcheck.command }}"]
      interval: {{ healthcheck.interval }}
      timeout: {{ healthcheck.timeout }}
      retries: {{ healthcheck.retries }}
      start_period: {{ healthcheck.start_period }}
{% endif %}
{% if resources and resources.memory is defined %}
    deploy:
      resources:
        limits:
          memory: {{ resources.memory }}
          cpus: '{{ resources.cpu }}'
{% endif %}
    labels:
      - "prometheus.scrape=true"
      - "prometheus.port={{ monitoring.metrics_port | default(9090) }}"
      - "prometheus.path=/metrics"
      - "project={{ project_name }}"
      - "service={{ addon_name }}"

volumes:
  {{ addon_name }}-data:
    name: {{ project_name }}-{{ addon_name }}-data

networks:
  {{ project_name }}-network:
    name: {{ project_name }}-network
    external: true
