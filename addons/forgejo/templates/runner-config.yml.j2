# Forgejo Actions Runner Configuration
# Generated by Ansible from project configuration

log:
  level: info

runner:
  file: .runner
  capacity: {{ runner_capacity | default(1) }}
  timeout: {{ runner_timeout | default('3h') }}
  insecure: false
  fetch_timeout: 5s
  fetch_interval: 2s
  labels:
    - "ubuntu-latest:docker://node:20-bookworm"

cache:
  enabled: true
  dir: ""
  host: ""
  port: 0
  external_server: ""

container:
  network: "{{ project_name }}-network"
  privileged: false
  options: "--add-host=localhost:{{ forgejo_container_ip | default('172.30.0.3') }} -v /usr/local/bin/age:/usr/local/bin/age:ro -v /opt/forgejo-runner/.age:/opt/forgejo-runner/.age:ro -v /opt/superdeploy/projects:/opt/superdeploy/projects:ro"
  workdir_parent: ""
  valid_volumes: []
  docker_host: ""
  force_pull: false

host:
  workdir_parent: "{{ runner_workdir_parent | default('/opt/forgejo-runner') }}"
