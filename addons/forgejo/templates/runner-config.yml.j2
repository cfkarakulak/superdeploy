# Forgejo Actions Runner Configuration
# Generated by Ansible from project configuration

log:
  level: info

runner:
  file: .runner
  capacity: {{ runner_capacity | default(1) }}
  timeout: {{ runner_timeout | default('3h') }}
  insecure: false
  fetch_timeout: 5s
  fetch_interval: 2s
  # Note: Labels are set during registration and stored in .runner file
  # The labels below are for reference only
  labels:
    - "ubuntu-latest:docker://node:20-bookworm"
    - "orchestrator:docker://node:20-bookworm"
    - "linux:docker://node:20-bookworm"
    - "docker:docker://node:20-bookworm"

cache:
  enabled: true
  dir: ""
  host: ""
  port: 0
  external_server: ""

container:
  network: "{{ project_name }}-network"
  privileged: false
  options: ""
  workdir_parent: ""
  valid_volumes:
    - "/opt/superdeploy/projects"
    - "/opt/apps"
    - "/var/run/docker.sock"
  docker_host: "unix:///var/run/docker.sock"
  force_pull: false

host:
  workdir_parent: "{{ runner_workdir_parent | default('/opt/forgejo-runner') }}"
