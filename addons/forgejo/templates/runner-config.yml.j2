# Forgejo Actions Runner Configuration
# Generated by Ansible from project configuration

log:
  level: info

runner:
  file: .runner
  capacity: {{ runner_capacity | default(1) }}
  timeout: {{ runner_timeout | default('3h') }}
  insecure: false
  fetch_timeout: 5s
  fetch_interval: 2s
  labels:
    - "ubuntu-latest:docker://node:20-bookworm"

cache:
  enabled: true
  dir: ""
  host: ""
  port: 0
  external_server: ""

container:
  network: "{{ project_name }}-network"
  privileged: false
  options: "-v /var/run/docker.sock:/var/run/docker.sock -v /opt/superdeploy/projects:/opt/superdeploy/projects:ro -v /opt/apps:/opt/apps"
  workdir_parent: ""
  valid_volumes:
    - "/opt/superdeploy/projects:/opt/superdeploy/projects:ro"
    - "/opt/apps:/opt/apps"
    - "/var/run/docker.sock:/var/run/docker.sock"
  docker_host: ""
  force_pull: false

host:
  workdir_parent: "{{ runner_workdir_parent | default('/opt/forgejo-runner') }}"
