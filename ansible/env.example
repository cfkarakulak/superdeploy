# =============================================================================
# Ansible Configuration Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# All variables are REQUIRED - no fallbacks or defaults

# SSH Configuration
ANSIBLE_SSH_KEY=/path/to/your/ssh/private/key

# Infrastructure Secrets (for app-deployment role)
POSTGRES_USER=superdeploy
POSTGRES_PASSWORD=changeme_strong_password
POSTGRES_DB=superdeploy

RABBITMQ_DEFAULT_USER=superdeploy
RABBITMQ_DEFAULT_PASS=changeme_strong_password

# Application Configuration
API_DATABASE_URL=postgresql://superdeploy:changeme_strong_password@postgres:5432/superdeploy
API_RABBITMQ_URL=amqp://superdeploy:changeme_strong_password@rabbitmq:5672/
API_SECRET_KEY=changeme_generate_random_secret_key_here
ENVIRONMENT=production

# Proxy Registry Configuration
PROXY_REGISTRY_DB_URL=postgresql://superdeploy:changeme_strong_password@postgres:5432/superdeploy
PROXY_REGISTRY_PORT=8080
PROXY_REGISTRY_USER=admin
PROXY_REGISTRY_PASS=changeme_strong_password

# Forgejo Git Server Configuration
FORGEJO_DB_NAME=forgejo
FORGEJO_DB_USER=forgejo
FORGEJO_DB_PASSWORD=changeme_strong_password

