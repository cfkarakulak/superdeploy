{
  "dashboard": {
    "title": "Cheapa - System Overview",
    "tags": ["cheapa", "overview"],
    "timezone": "browser",
    "panels": [
      {
        "title": "PostgreSQL - Active Connections",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "pg_stat_activity_count{project=\"cheapa\"}",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "title": "Redis - Connected Clients",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "redis_connected_clients{project=\"cheapa\"}",
            "legendFormat": "Connected Clients"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "title": "RabbitMQ - Queue Messages",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(rabbitmq_queue_messages{project=\"cheapa\"}) by (queue)",
            "legendFormat": "{{queue}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      }
    ],
    "schemaVersion": 16,
    "version": 0
  }
}

