# =============================================================================
# Project: Cheapa - Secrets Configuration (EXAMPLE)
# =============================================================================
# Copy this file to secrets.env and fill in your values:
#   cp projects/cheapa/secrets.env.example projects/cheapa/secrets.env

# Database
POSTGRES_HOST=cheapa-postgres
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=change_me
POSTGRES_DB=cheapa_db
POSTGRES_PORT=5432

# Message Queue
RABBITMQ_HOST=cheapa-rabbitmq
RABBITMQ_USER=your_rabbitmq_user
RABBITMQ_PASSWORD=change_me
RABBITMQ_PORT=5672

# Cache
REDIS_HOST=cheapa-redis
REDIS_PASSWORD=change_me
REDIS_PORT=6379

# API
API_SECRET_KEY=generate_with_openssl_rand_hex_32
API_DEBUG=false
API_BASE_URL=http://YOUR_VM_IP:8000
PUBLIC_URL=http://YOUR_VM_IP

# Monitoring
SENTRY_DSN=

# GitHub Repos
GITHUB_REPO_API=yourorg/api
GITHUB_REPO_DASHBOARD=yourorg/dashboard
GITHUB_REPO_SERVICES=yourorg/services
