# =============================================================================
# SuperDeploy - Git Ignore
# =============================================================================

# Environment & Secrets
.env
.env.*
*.env.local
*.env.*.local
secrets.env
projects/*/secrets.env
projects/*/compose/env/*.env
!projects/*/compose/env/*.env.example

# Project-specific .env files (NEVER commit!)
projects/*/.env

# State files (deployment state tracking)
projects/*/state.yml

# Project secrets (NEVER commit - single source of truth)
projects/*/secrets.yml

# Merged environment files (contains all secrets)
merged_environment_*.yml

# Python
__pycache__/
*.py[cod]
*$py.class
*.so
.Python
venv/
env/
ENV/
*.egg-info/
dist/
build/
*.egg

# Terraform
**/.terraform/
**/.terraform.lock.hcl
*.tfstate
*.tfstate.backup
*.tfstate.*
terraform/envs/**/*.tfvars
shared/terraform/envs/**/*.tfvars
!terraform/envs/**/*.tfvars.example
!shared/terraform/envs/**/*.tfvars.example

# Ansible
ansible/*.retry
ansible/*.log
ansible/.ansible/

# IDE
.vscode/
.idea/
*.swp
*.swo
*~
.DS_Store

# Logs
*.log
/logs/
/cli/logs/
/dashboard/logs/
*.out

# Backups
*.bak
*.backup
*.old

# SSH Keys (never commit!)
*.pem
*.key
id_rsa*
!*.pub

# Temporary files
tmp/
temp/
.cache/

# Project secrets (auto-added by superdeploy init)
projects/*/apps/*/.env
projects/*/apps/*/.env.*
!projects/*/apps/*/.env.example

# =============================================================================
# Addon System Generated Files
# =============================================================================

# Generated compose files (regenerated by superdeploy generate)
projects/*/docker-compose.core.yml
projects/*/docker-compose.apps.yml

# Generated environment files (contains merged addon env vars)
# .env.superdeploy removed - using secrets.yml only
projects/*/.env.generated

# Generated workflow files (contains addon-specific secrets)
projects/*/.github/workflows/deploy.yml

# Generated Ansible playbooks (contains addon tasks)
projects/*/ansible/playbook.yml
projects/*/ansible/generated/

# Addon cache and temporary files
.addon-cache/
.addon-temp/

# Generated monitoring configurations
/opt/superdeploy/shared/prometheus/projects/
/opt/superdeploy/shared/grafana/dashboards/projects/

# Generated proxy configurations
/opt/superdeploy/shared/caddy/routes/

# =============================================================================
# Orchestrator & Shared Secrets
# =============================================================================
shared/orchestrator/.env
shared/orchestrator/.secrets
shared/config/.env

# Orchestrator secrets and state (NEVER commit!)
shared/orchestrator/secrets.yml
shared/orchestrator/state.yml
shared/terraform/envs/dev/
