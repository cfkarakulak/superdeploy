# ═══════════════════════════════════════════════════════════════════════════
# {{PROJECT_NAME}} PROJECT - CORE SERVICES (Always Running)
# ═══════════════════════════════════════════════════════════════════════════
# Auto-generated from config.yml by superdeploy
# These services are ALWAYS deployed and running.
# ═══════════════════════════════════════════════════════════════════════════

networks:
  {{PROJECT_NAME}}-network:
    name: {{PROJECT_NAME}}-network
    external: true

volumes:
{% for service_name, service_config in CORE_SERVICES.items() %}
  {{service_name}}-data:
    name: {{PROJECT_NAME}}-{{service_name}}-data
{% endfor %}

services:
{% if 'postgres' in CORE_SERVICES %}
  # ═══════════════════════════════════════════════════════════════════════════
  # PostgreSQL (Project-Specific)
  # ═══════════════════════════════════════════════════════════════════════════
  postgres:
    image: postgres:{{CORE_SERVICES.postgres.version}}
    container_name: {{PROJECT_NAME}}-postgres
    restart: unless-stopped
    environment:
      POSTGRES_USER: ${POSTGRES_USER:-{{CORE_SERVICES.postgres.user}}}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:?required}
      POSTGRES_DB: ${POSTGRES_DB:-{{CORE_SERVICES.postgres.database}}}
    volumes:
      - postgres-data:/var/lib/postgresql/data
    networks:
      - {{PROJECT_NAME}}-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U $$POSTGRES_USER -d $$POSTGRES_DB"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s
    deploy:
      resources:
        limits:
          memory: 512M
          cpus: '0.5'
        reservations:
          memory: 256M
    stop_grace_period: 30s
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"
    labels:
      - "com.superdeploy.project={{PROJECT_NAME}}"
      - "com.superdeploy.service=postgres"

{% endif %}
{% if 'rabbitmq' in CORE_SERVICES %}
  # ═══════════════════════════════════════════════════════════════════════════
  # RabbitMQ (Project-Specific)
  # ═══════════════════════════════════════════════════════════════════════════
  rabbitmq:
    image: rabbitmq:{{CORE_SERVICES.rabbitmq.version}}
    container_name: {{PROJECT_NAME}}-rabbitmq
    restart: unless-stopped
    environment:
      RABBITMQ_DEFAULT_USER: ${RABBITMQ_USER:-{{CORE_SERVICES.rabbitmq.user}}}
      RABBITMQ_DEFAULT_PASS: ${RABBITMQ_PASSWORD:?required}
    volumes:
      - rabbitmq-data:/var/lib/rabbitmq
    networks:
      - {{PROJECT_NAME}}-network
    healthcheck:
      test: ["CMD-SHELL", "rabbitmq-diagnostics -q ping"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 30s
    deploy:
      resources:
        limits:
          memory: 512M
          cpus: '0.5'
        reservations:
          memory: 256M
    stop_grace_period: 30s
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"
    labels:
      - "com.superdeploy.project={{PROJECT_NAME}}"
      - "com.superdeploy.service=rabbitmq"

{% endif %}
{% if 'redis' in CORE_SERVICES %}
  # ═══════════════════════════════════════════════════════════════════════════
  # Redis (Project-Specific)
  # ═══════════════════════════════════════════════════════════════════════════
  redis:
    image: redis:{{CORE_SERVICES.redis.version}}
    container_name: {{PROJECT_NAME}}-redis
    restart: unless-stopped
    command: redis-server --requirepass ${REDIS_PASSWORD:?required}
    volumes:
      - redis-data:/data
    networks:
      - {{PROJECT_NAME}}-network
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s
    deploy:
      resources:
        limits:
          memory: 256M
          cpus: '0.25'
        reservations:
          memory: 128M
    stop_grace_period: 10s
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"
    labels:
      - "com.superdeploy.project={{PROJECT_NAME}}"
      - "com.superdeploy.service=redis"

{% endif %}
{% if 'memcached' in CORE_SERVICES %}
  # ═══════════════════════════════════════════════════════════════════════════
  # Memcached (Project-Specific)
  # ═══════════════════════════════════════════════════════════════════════════
  memcached:
    image: memcached:{{CORE_SERVICES.memcached.version}}
    container_name: {{PROJECT_NAME}}-memcached
    restart: unless-stopped
    command: memcached -m {{CORE_SERVICES.memcached.memory|default('64')}}
    networks:
      - {{PROJECT_NAME}}-network
    healthcheck:
      test: ["CMD", "nc", "-z", "localhost", "11211"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s
    deploy:
      resources:
        limits:
          memory: {{CORE_SERVICES.memcached.memory|default('64')}}M
          cpus: '0.25'
        reservations:
          memory: 32M
    stop_grace_period: 10s
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"
    labels:
      - "com.superdeploy.project={{PROJECT_NAME}}"
      - "com.superdeploy.service=memcached"

{% endif %}

